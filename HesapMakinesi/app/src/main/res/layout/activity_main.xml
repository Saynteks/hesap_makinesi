<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="17dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <Button
            android:id="@+id/buton_topla"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:backgroundTint="#154349"
            android:text="+"
            android:textColor="#00FF9A"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buton_bol"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:backgroundTint="#154349"
            android:text="/"
            android:textColor="#00FF9A"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buton_carp"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:backgroundTint="#154349"
            android:text="X"
            android:textColor="#00FF9A"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buton_cikar"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:backgroundTint="#154349"
            android:text="-"
            android:textColor="#00FF9A"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="387dp"
        android:layout_height="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <Button
            android:id="@+id/buton_temizle"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:backgroundTint="#154349"
            android:text="C"
            android:textColor="#00FF9A"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buton_sifir"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:backgroundTint="#154349"
            android:text="0"
            android:textColor="#00FF9A"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buton_esittir"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:backgroundTint="#154349"
            android:text="="
            android:textColor="#00FF9A"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout5"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <Button
            android:id="@+id/buton_bir"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:backgroundTint="#154349"
            android:text="1"
            android:textColor="#00FF9A"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buton_iki"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:backgroundTint="#154349"
            android:text="2"
            android:textColor="#00FF9A"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buton_uc"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:backgroundTint="#154349"
            android:text="3"
            android:textColor="#00FF9A"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/buton_dort"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:backgroundTint="#154349"
            android:text="4"
            android:textColor="#00FF9A"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buton_bes"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:backgroundTint="#154349"
            android:text="5"
            android:textColor="#00FF9A"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buton_alti"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:backgroundTint="#154349"
            android:text="6"
            android:textColor="#00FF9A"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/buton_yedi"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:backgroundTint="#154349"
            android:text="7"
            android:textColor="#00FF9A"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buton_sekiz"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:backgroundTint="#154349"
            android:text="8"
            android:textColor="#00FF9A"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buton_dokuz"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:backgroundTint="#154349"
            android:text="9"
            android:textColor="#00FF9A"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2.Sayı:"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextNumber5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1.Sayı:"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextNumber4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

</androidx.constraintlayout.widget.ConstraintLayout>